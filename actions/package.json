{
  "name": "jobs-actions",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "Collection of actions useful for building and syncing jobs",
  "scripts": {
    "build:merge-job-configs": "ncc build -s --no-source-map-register src/merge-job-configs-action.ts -o lib/merge-job-configs-action",
    "build": "concurrently 'npm:build:merge-job-configs'",
    "test": "ava src/**.test.ts --serial --verbose",
    "lint": "tsc && eslint 'src' --max-warnings 0",
    "lint-fix": "eslint --fix 'src'"
  },
  "dependencies": {
    "@actions/core": "^1.9.0",
    "del": "^7.0.0",
    "globby": "^13.1.2",
    "yaml": "^2.1.1"
  },
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "@types/node": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "@vercel/ncc": "^0.34.0",
    "ava": "^5.0.1",
    "concurrently": "^7.3.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "prettier/prettier": "warn",
      "no-duplicate-imports": "warn",
      "no-console": "warn"
    }
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "all",
    "importOrder": [
      "<THIRD_PARTY_MODULES>",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  }
}
